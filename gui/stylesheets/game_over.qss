QWidget {
   background-color: lightblue;
}

QLabel {
   font-family: "Minecraftia";
}

QLabel#finished_label {
   font-size: 36px;
}

QLabel#score_label {
   font-size: 24px;
   padding-top: 50px;
}

QLabel#highscore_label {
   font-size: 24px;
   padding-bottom: 50px;
}

